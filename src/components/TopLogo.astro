---
import { css } from "../../styled-system/css";
---

<div>
  <div
    class={css({
      display: "flex",
      flexDirection: "column",
      alignItems: "center",
      justifyContent: "center",
      height: "100vh",
      position: "relative",
      color: "#fff",
    })}
  >
    <div class={css({ textAlign: "center", zIndex: 1 })}>
      <h1
        class={css({
          fontSize: "2xl",
          fontWeight: 700,
          fontFamily: "Noto Sans JP Variable",
          md: {
            fontSize: "3xl",
          },
          lg: {
            fontSize: "4xl",
          },
        })}
      >
        実世界インタラクション研究室
      </h1>
      <h2
        class={css({
          fontSize: "xl",
          fontWeight: 400,
          fontFamily: "Afacad Variable",
          lg: {
            fontSize: "2xl",
          },
        })}
      >
        Physically Augmented Interaction Lab
      </h2>
    </div>
    <div
      class={css({
        position: "absolute",
        top: "0",
        left: "0",
        right: "0",
        height: "100%",
        display: "flex",
        justifyContent: "center",
        alignItems: "center",
      })}
    >
      <div class="logo-bg-big"></div>
    </div>
    <div
      class={css({
        position: "absolute",
        top: "0",
        left: "0",
        right: "0",
        height: "100%",
        display: "flex",
        justifyContent: "center",
        alignItems: "center",
      })}
    >
      <div class="logo-bg-small"></div>
    </div>
  </div>

  <style>
    .logo-bg-big {
      border: 4px solid red;
      width: 200px;
      height: 200px;
      transform: rotate(45deg) skew(-16deg, -16deg);
      opacity: 0.8;
    }
    .logo-bg-small {
      border: 8px solid red;
      width: 170px;
      height: 170px;
      transform: rotate(45deg) skew(-16deg, -16deg);
      opacity: 0.8;
    }
  </style>
</div>
